package _30_9_2023_N1;
import java.util.Scanner;
public class _8_YardGreening {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        double metresRectangle = Double.parseDouble(scanner.nextLine());

        double firstPrice = metresRectangle * 7.61;

        //double sale = firstPrice * 0.18;
        double finalPrice = firstPrice - (firstPrice * 0.18);

        System.out.printf("The final price is %.2f lv.", finalPrice);
        //System.out.printf("The discount is %.2f lv.", sale);
        System.out.println("The discount is: " + (firstPrice * 0.18) + "lv.");
    }
}
